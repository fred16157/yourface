#:kivy 2.0.0

BoxLayout:
    orientation: 'vertical'
    Image:
        id: imageView
        allow_stretch: True
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

<SettingsPopup>:
    title: 'Settings'
    size_hint: (None, None)
    size: (400, 400)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text_size: self.size
            valign: "middle"
            padding_x: 5
            text: "Overlay on faces"
        CheckBox:
            height: dp(20)
            id: overlayModeCheckbox
        Label:
            text_size: self.size
            valign: "middle"
            padding_x: 5
            text: "Overlay path"
        TextInput:
            id: overlayPathInput
        Button:
            id: overlayPathPickerButton
            text: 'Choose...'
        Label:
            text_size: self.size
            valign: "middle"
            padding_x: 5
            text: "Image width"
        TextInput:
            id: imageWidthInput
        Label:
            text_size: self.size
            valign: "middle"
            padding_x: 5
            text: "Image height"
        TextInput:
            id: imageHeightInput
        
        Button:
            id: confirmButton
            text: 'Confirm'